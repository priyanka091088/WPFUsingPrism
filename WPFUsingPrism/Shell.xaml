<Window x:Class="WPFUsingPrism.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prsm="http://www.codeplex.com/CompositeWPF"
        Title="Shell" Height="500" Width="500">
    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" prsm:RegionManager.RegionName="EmployeeRegion" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent"
                    VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
        </ContentControl>

        <ContentControl Grid.Row="1" prsm:RegionManager.RegionName="ProductRegion" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                        VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" ></ContentControl>
    </Grid>
</Window>
